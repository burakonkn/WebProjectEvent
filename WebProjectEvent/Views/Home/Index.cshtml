@model List<EventGetModel>
@{
    ViewData["Title"] = "Ana Sayfa";
}

<section class="hero">
    <div class="container">
        <span class="tagline">Türkiye'nin En Popüler Etkinlik Platformu</span>
        <h1>Unutulmaz Anıları<br><span>Birlikte Yaşayın</span></h1>
        <p>Binlerce etkinlik arasından size en uygun olanı bulun. Konserler, konferanslar, sergiler ve daha fazlası sizi
            bekliyor.</p>
        <div class="hero-buttons">
            <a asp-controller="Event" asp-action="Index" class="btn btn-primary"><i class="fa-solid fa-search"></i>
                Etkinlik Ara</a>
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Nasıl Çalışır?</a>
        </div>
    </div>
</section>

<section class="stats">
    <div class="container stats-grid">
        <div class="stat-item">
            <h3>@ViewData["EventCount"]</h3>
            <p>Etkinlik</p>
        </div>
        <div class="stat-item">
            <h3>@ViewData["UserCount"]</h3>
            <p>Kullanıcı</p>
        </div>
        <div class="stat-item">
            <h3>@ViewData["CityCount"]</h3>
            <p>Şehir</p>
        </div>
        <div class="stat-item">
            <h3>0</h3>
            <p>Değerlendirme</p>
        </div>
    </div>
</section>

<section class="featured-events">
    <div class="container">
        <h2>Bu Hafta Sonu Neler Var?</h2>
        <p class="section-subtitle">En popüler ve ilgi çekici etkinlikleri keşfedin</p>

        <div class="event-grid">
            @foreach (var eventList in Model)
            {
                <div class="event-card">
                    <div class="card-image">
                        <img src="~/img/@eventList.EventImage" alt="@eventList.EventName">
                        <span class="category-tag teknoloji">@eventList.CategoryName</span>
                    </div>
                    <div class="card-content">
                        <h3>@eventList.EventName</h3>
                        <p class="description">@eventList.EventDescription</p>
                        <ul class="event-details">
                            <li><i class="fa-solid fa-calendar-days"></i> @eventList.EventDate</li>
                            <li><i class="fa-solid fa-clock"></i> @eventList.EventTime</li>
                            <li><i class="fa-solid fa-location-dot"></i> @eventList.EventLocation</li>
                            <li><i class="fa-solid fa-users"></i> @eventList.EventSubscriber katılımcı</li>
                        </ul>
                    </div>
                    <div class="card-footer">
                        @if (eventList.EventPrice == 0)
                        {
                            <span class="price-free">Ücretsiz</span>
                        }
                        else
                        {
                            <span class="price">₺@eventList.EventPrice</span>
                        }
                        <a asp-controller="Event" asp-action="RegisterEvent" class="btn btn-primary">Kayıt Ol</a>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<section class="why-us">
    <div class="container">
        <h2>Neden EtkinlikHub?</h2>
        <p class="section-subtitle">Etkinlik keşfetmeyi ve katılmayı kolaylaştıran özelliklerimiz</p>
        <div class="features-grid">
            <div class="feature-box">
                <i class="fa-solid fa-magnifying-glass"></i>
                <h3>Kolay Arama</h3>
                <p>İlgi alanlarınıza göre etkinlikleri kolayca bulun ve filtreleyin</p>
            </div>
            <div class="feature-box">
                <i class="fa-solid fa-calendar-plus"></i>
                <h3>Hızlı Rezervasyon</h3>
                <p>Birkaç tıklamayla etkinliklere kaydolun ve biletinizi alın</p>
            </div>
            <div class="feature-box">
                <i class="fa-solid fa-users"></i>
                <h3>Topluluk</h3>
                <p>Benzer ilgi alanlarına sahip insanlarla tanışın ve bağlantı kurun</p>
            </div>
            <div class="feature-box">
                <i class="fa-solid fa-arrow-trend-up"></i>
                <h3>Trend Etkinlikler</h3>
                <p>En popüler ve çok konuşulan etkinlikleri keşfedin</p>
            </div>
        </div>
    </div>
</section>

<section class="cta">
    <div class="container">
        <h2>Hayalinizdeki Etkinliği Kaçırmayın!</h2>
        <p>Bugün aramaya başlayın ve size özel etkinlikleri keşfedin. Binlerce insan sizin gibi harika deneyimler
            yaşıyor.</p>
        <a href="etkinlikler.html" class="btn">Hemen Başlayın</a>
    </div>
</section>