@model List<AdminEventGetModel>
@{
    Layout = "_AdminLayout";
}

<header class="admin-header">
    <i class="fa-solid fa-bars mobile-menu-toggle" id="mobile-menu-btn"></i>
    <h1>Etkinlik Yönetimi</h1>
    <div class="admin-profile">
        <span>Merhaba, Admin</span>
        <div class="profile-icon"><i class="fa-solid fa-user"></i></div>
    </div>
</header>

<section class="admin-content">
    <div class="content-header">
        <h2>Tüm Etkinlikler</h2>
        <a asp-controller="Admin" asp-action="EventCreate" class="btn btn-primary btn-sm">
            <i class="fa-solid fa-plus"></i> Yeni Etkinlik Ekle
        </a>
    </div>

    <div class="card">
        <div class="table-wrapper">
            <table class="data-table">
                <thead>
                    <tr>
                        <th>Etkinlik Adı</th>
                        <th>Tarih</th>
                        <th>Konum</th>
                        <th>Kayıtlar</th>
                        <th>Fiyat</th>
                        <th>Eylemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var adminEntity in Model)
                    {
                        <tr>
                            <td>@adminEntity.EventName</td>
                            <td>@adminEntity.EventDate</td>
                            <td>@adminEntity.EventLocation</td>
                            <td>120 / @adminEntity.EventSubscriber</td>
                            @if (adminEntity.EventPrice == 0)
                            {
                                <td>Ücretsiz</td>
                            }
                            else
                            {
                                <td>₺@adminEntity.EventPrice</td>
                            }
                            <td class="actions">
                                <a asp-controller="Admin" asp-action="EventEdit" asp-route-id="@adminEntity.EventId"
                                    class="btn btn-secondary btn-sm"><i class="fa-solid fa-pencil"></i></a>
                                <a href="admin-kayitlar.html" class="btn btn-secondary btn-sm"><i
                                        class="fa-solid fa-users"></i></a>
                                <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal"
                                    data-bs-target="#deleteModal" data-id="@adminEntity.EventId"> <i
                                        class="fa-solid fa-trash"></i>
                                    Sil
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</section>

<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Silme Onayı</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Bu kaydı kalıcı olarak silmek istediğinize emin misiniz? Bu işlem geri alınamaz.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>

                <form asp-controller="Admin" asp-action="EventDelete" method="post" id="deleteModalForm">
                    <input type="hidden" name="id" id="deleteEventIdInput" />
                    <button type="submit" class="btn btn-danger">Evet, Kalıcı Olarak Sil</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var deleteModal = document.getElementById('deleteModal');

            // show.bs.modal olayı, Bootstrap 5'e aittir
            deleteModal.addEventListener('show.bs.modal', function (event) {
                var button = event.relatedTarget;
                var eventId = button.getAttribute('data-id');
                var modalInput = deleteModal.querySelector('#deleteEventIdInput');
                modalInput.value = eventId;
            });
        });
    </script>
}