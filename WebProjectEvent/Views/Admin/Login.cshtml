@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EtkinlikHub Admin - Giriş</title>
    <link rel="stylesheet" href="~/css/admin-style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
</head>

<body>

    <div class="login-container">
        <div class="login-box">
            <a href="index.html" class="logo">
                <i class="fa-solid fa-calendar-check"></i> EtkinlikHub
            </a>
            <p>Yönetici Paneline Hoş Geldiniz</p>

            <form action="admin-etkinlikler.html" method="GET">
                <div class="form-group">
                    <label for="email">E-posta</label>
                    <input type="email" id="email" name="email" required value="admin@etkinlikhub.com">
                </div>
                <div class="form-group">
                    <label for="password">Şifre</label>
                    <input type="password" id="password" name="password" required value="123456">
                </div>
                <button asp-controller="Admin" asp-action="Event" type="submit" class="btn btn-primary">Giriş
                    Yap</button>
            </form>

            <a asp-controller="Home" asp-action="Index" class="back-link">Ana Sayfaya Dön</a>
        </div>
    </div>

</body>

</html>