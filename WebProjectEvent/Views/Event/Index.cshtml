@model List<EventGetModel>
@{
    ViewData["Title"] = "Etkinlikler";
}

<section class="search-hero">
    <div class="container">
        <h1>Etkinlikleri Keşfedin</h1>
        <p>Size en uygun etkinliği bulun ve unutulmaz deneyimler yaşayın</p>
        <form method="get">
            <div class="search-bar">
                <div class="search-input">
                    <i class="fa-solid fa-search"></i>
                    <input name="q" type="text" placeholder="Etkinlik ara..." value="@ViewData["q"]">
                </div>
                <select name="category" asp-items="@ViewBag.Categories">
                    <option value="">Tüm Kategoriler</option>
                </select>
                <select name="location" asp-items="@ViewBag.Locations">
                    <option value="">Tüm Şehirler</option>
                </select>
                <div>
                    <button type="submit" class="btn btn-secondary">
                        <i class="fa-solid fa-magnifying-glass"></i>
                    </button>
                </div>
            </div>
        </form>
    </div>
</section>

<section class="events-list">
    <div class="container">
        <p class="event-count">@Model.Count etkinlik bulundu</p>

        <div class="event-grid">
            @foreach (var eventList in Model)
            {
                <div class="event-card">
                    <div class="card-image">
                        <img src="~/img/@eventList.EventImage" alt="@eventList.EventName">
                        <span class="category-tag teknoloji">@eventList.CategoryName</span>
                    </div>
                    <div class="card-content">
                        <h3>@eventList.EventName</h3>
                        <p class="description">@eventList.EventDescription</p>
                        <ul class="event-details">
                            <li><i class="fa-solid fa-calendar-days"></i> @eventList.EventDate</li>
                            <li><i class="fa-solid fa-clock"></i> @eventList.EventTime</li>
                            <li><i class="fa-solid fa-location-dot"></i> @eventList.EventLocation</li>
                            <li><i class="fa-solid fa-users"></i> @eventList.EventSubscriber katılımcı</li>
                        </ul>
                    </div>
                    <div class="card-footer">
                        @if (eventList.EventPrice == 0)
                        {
                            <span class="price-free">Ücretsiz</span>
                        }
                        else
                        {
                            <span class="price">₺@eventList.EventPrice</span>
                        }
                        <a asp-controller="Event" asp-action="RegisterEvent" class="btn btn-primary">Kayıt Ol</a>
                    </div>
                </div>
            }
        </div>
    </div>
</section>